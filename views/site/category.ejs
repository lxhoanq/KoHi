<% include layout/header.ejs %>
<% include layout/leftside.ejs %>
<div class="cartegory-right">
    <div class="cartegory-right-top row">
      <div class="cartegory-right-top-item">
        <% if (productType) { %>
          <p><%= productType.loaisanpham_ten %></p>
        <% } else { %>
          <p>Hiện tại chưa có loại sản phẩm nào</p>
        <% } %>
      </div>
      <div class="cartegory-right-top-item">
        <button><span>Bộ lọc</span><i class="fas fa-sort-down"></i></button>
      </div>
      <div class="cartegory-right-top-item">
        <select name="" id="">
          <option value="">Sắp xếp</option>
          <option value="">Giá cao đến thấp</option>
          <option value="">Giá thấp đến cao</option>
        </select>
      </div>
    </div>

    <div class="cartegory-right-content row">
      <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
          <div class="cartegory-right-content-item">
            <a href="/product/<%= product.sanpham_id %>">
              <img src="/uploads/<%= product.sanpham_anh %>" alt="">
            </a>
            <a href="/product/<%= product.sanpham_id %>">
              <h1><%= product.sanpham_tieude %></h1>
            </a>
            <p><%= parseInt(product.sanpham_gia).toLocaleString('vi-VN') %><sup>đ</sup></p>
            <span>_new_</span>
          </div>
        <% }) %>
      <% } else { %>
        <p>Hiện tại chưa có sản phẩm nào trong danh mục này.</p>
      <% } %>
    </div>

    <div class="cartegory-right-bottom row">
      <div class="cartegory-right-bottom-items">
        <p>Hiển thị <%= products.length %> / <%= products.length %> sản phẩm</p>
      </div>
      <div class="cartegory-right-bottom-items">
        <p><span>&#171;</span> 1 2 3 4 5 <span>&#187;</span> Trang cuối</p>
      </div>
    </div>
  </div>
</div>
</div>
</section>
<% include layout/footer.ejs %>
